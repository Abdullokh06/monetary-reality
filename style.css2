body {
  margin: 0;
  padding: 0;
  background: #ffffff;
  color: #111;
  font-family: Georgia, "Times New Roman", serif;
  line-height: 1.6;
}

main {
  max-width: 720px;
  margin: 0 auto;
  padding: 3em 1.5em;
}

h1, h2, h3 {
  font-weight: normal;
}

h2 {
  margin-top: 3em;
}

section {
  margin-bottom: 3em;
}

img {
  display: block;
  margin: 2em auto;
}

hr {
  margin: 4em 0;
  border: none;
  border-top: 1px solid #ccc;
}
